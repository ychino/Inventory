<%= form_for(@device) do |f| %>
  <% if @device.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@device.errors.count, "error") %> prohibited this device from being saved:</h3>

      <ul>
      <% @device.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Enter device name...', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control', placeholder: 'Enter device description...', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :kind %><br>
    <%= f.select :kind, Device::KINDS, { prompt: 'Select a kind' }, { required: true, class: 'form-control' } %>
  </div>
  <div class="form-group actions">
    <%= f.submit 'Submit', :class => 'btn btn-lg btn-success btn-block' %>
  </div>
<% end %>
