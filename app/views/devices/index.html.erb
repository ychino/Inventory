<% content_for(:page_header) do %>
  <%= "List of devices" %>
<% end %>
<% content_for :panel_heading do %>Content<% end %>


<p id="notice"><%= notice %></p>

<table id="devices" class="table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Kind</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.name %></td>
        <td><%= device.description.truncate(50) %></td>
        <td><%= device.kind %></td>
        <td class="action-buttons">
          <%= link_to 'Show', device, class: 'btn btn-success' %>
          <%= link_to 'Edit', edit_device_path(device), class: 'btn btn-primary' %>
          <%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for(:extra_scripts) do %>
  <script type="text/javascript">
    $(document).ready(function() {
      $('#devices').DataTable({ responsive: true });
    });
  </script>
<% end %>
